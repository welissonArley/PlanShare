<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fontFamily="clr-namespace:PlanShare.App.Constants">

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="{Static fontFamily:FontFamily.SECONDARY_FONT_REGULAR}" />
    </Style>

    <Style x:Key="PageTitle" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontFamily" Value="{Static fontFamily:FontFamily.MAIN_FONT_BLACK}" />
    </Style>

    <Style x:Key="TitleForEntry" TargetType="Label">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontFamily" Value="{Static fontFamily:FontFamily.MAIN_FONT_THIN}" />
        <Setter Property="Margin" Value="4,0,0,0" />
    </Style>

</ResourceDictionary>